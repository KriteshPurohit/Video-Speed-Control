{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Minimal UI for controlling video playback speed on any website.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/play.png",
      "48": "icons/iconlogo.png",
      "128": "icons/pause.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
        "16": "icons/play.png",
        "48": "icons/iconlogo.png",
        "128": "icons/pause.png"
  }
}